[alias]

    # View abbreviated SHA, description, and history graph of the latest 20 commits
    l = log --pretty=oneline -n 20 --graph --abbrev-commit

    # View the current working tree status using the short format
    s = status -s

    # Show the diff between the latest commit and the current state
    d = diff

    # `git di $number` shows the diff between the state `$number` revisions ago and the current state
    di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"

    # Fetch
    fa = fetch --all

    # Pull in remote changes for the current repository and all its submodules
    pl = pull --recurse-submodules

    # Push this branch upstream
    psh = push -u origin

    # Force push with lease
    pshf = push --force-with-lease

    # Clone a repository including all submodules
    cl = clone --recursive

    # Commit
    c = commit

    # Commit all changes
    ca = !git add -A && git commit -a

    # Completely clean untracked files and directories from the repo
    cln = clean -fxdfq

    # Switch to a branch, creating it if necessary
    bc = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

    # Delete branch
    bd = branch --delete

    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v

    # Amend the currently staged files to the latest commit
    amend = commit --amend --reuse-message=HEAD

    # Credit an author on the latest commit
    credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"

    # Reset
    wr = reset --soft
    wR = reset --hard

    # Rebase
    r = rebase
    ri = rebase -i
    reb = "!r() { git rebase -i HEAD~$1; }; r"
    ra = rebase --abort
    rc = rebase --continue

    # Remotes
    R = remote
    Ra = remote add

    # Find branches containing commit
    fb = "!f() { git branch -a --contains $1; }; f"

    # Find commits by source code
    fc = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S$1; }; f"

    # Find commits by commit message
    fm = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short --grep=$1; }; f"

    # Remove branches that have already been merged with master
    # a.k.a. ‘delete merged’
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

    # List contributors with number of commits
    contributors = shortlog --summary --numbered

    # Submodules
    s = submodule
    ss = submodule sync
    si = submodule update --init --recursive
    su = submodule update --remote --recursive

    # Stash
    st = stash
    stl = stash list
    stp = stash pop
    stx = stash drop

[apply]

    # Detect whitespace errors when applying a patch
    whitespace = fix

[checkout]

    # Use origin as the default remote
    defaultRemote = origin

    # Enable parallel checkouts using all logical cores
    workers = 0

[submodule]
    fetchJobs = 0

[core]

    # Use custom `.gitignore` and `.gitattributes`
    excludesfile = ~/.gitignore

    # Treat spaces before tabs and all kinds of trailing whitespace as an error
    # [default] trailing-space: looks for spaces at the end of a line
    # [default] space-before-tab: looks for spaces before tabs at the beginning of a line
    whitespace = space-before-tab,tab-in-indent,trailing-space

    # Make `git rebase` safer on OS X
    # More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
    trustctime = false

    # Prevent showing files whose names contain non-ASCII symbols as unversioned.
    # http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
    precomposeunicode = false
    fscache = true

    # Speed up commands involving untracked files such as `git status`.
    # https://git-scm.com/docs/git-update-index#_untracked_cache
    untrackedCache = true

    # Use the built-in filesystem monitor to speed up `git status` and others
    fsmonitor = true

[branch]

    # Rebase by default on pull
    autosetuprebase = always

    # Show most recently changed branches first.
	sort = -committerdate

[color "branch"]

    current = yellow reverse
    local = green
    remote = cyan

[color "diff"]

    meta = yellow bold
    frag = magenta bold # line info
    old = red # deletions
    new = green # additions

[color "status"]

    added = green bold
    changed = yellow bold
    untracked = red bold

[commit]

    verbose = true

[diff]

    # Detect copies as well as renames
    renames = copies
    tool = zed

[diff "bin"]
    # Use `hexdump` to diff binary files
    textconv = hexdump -v -C

[fetch]

    # Fetch from repo in parallel
    parallel = 0

    # Update the commit graph after fetch
    writeCommitGraph = true

[help]

    # Automatically correct and execute mistyped commands
    autocorrect = 1

[merge]

    # Include summaries of merged commits in newly created merge commit messages
    log = true
    tool = zed

[pack]

    threads = 0

[push]

    # https://git-scm.com/docs/git-config#git-config-pushdefault
    default = simple
    autoSetupRemote = true
    # Make `git push` push relevant annotated tags when pushing branches out.
    followTags = true

# URL shorthands

[url "git@github.com:"]

    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]

    insteadOf = "github:"

[url "git@gist.github.com:"]

    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]

    insteadOf = "gist:"

[credential]

    # Use the OS X keychain for retrieving SSH credentials
    helper = osxkeychain

[user]

    # My details.
    name = Prakhar Bahuguna
    email = prakharbahuguna@users.noreply.github.com

[mergetool "zed"]

    cmd = "zed --wait"

[difftool "zed"]

    cmd = "zed --wait --diff"
