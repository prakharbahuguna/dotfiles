# General oh-my-zsh settings
DISABLE_AUTO_UPDATE="true"
HYPHEN_INSENSITIVE="true"
ENABLE_CORRECTION="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="yyyy-mm-dd"


# Packages to load
_ZPLUG_OMZ_PACKAGES=(autopep8 cp colored-man-pages command-not-found gitfast \
    pep8 pip pylint python sudo tmux urltools)
_ZPLUG_OTHER_PACKAGES=(rimraf/k MichaelAquilina/zsh-you-should-use \
    Tarrasch/zsh-autoenv voronkovich/gitignore.plugin.zsh \
    zsh-users/zsh-autosuggestions zsh-users/zsh-syntax-highlighting \
    zsh-users/zsh-history-substring-search)


# Theme and settings
_ZPLUG_THEME='bhilburn/powerlevel9k'
POWERLEVEL9K_SHOW_CHANGESET=true
POWERLEVEL9K_CHANGESET_HASH_LENGTH=10
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(context dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status command_execution_time time)


# Auto-suggestions settings
ZSH_AUTOSUGGEST_USE_ASYNC=true
ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=20


# Syntax highlighter settings
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets cursor line)


# History substring search
setopt HIST_IGNORE_ALL_DUPS
# bind UP and DOWN arrow keys
zmodload zsh/terminfo

if [ "${TERM_PROGRAM}" = 'iTerm.app' ]; then
    ZSH_TMUX_AUTOSTART=true
fi
