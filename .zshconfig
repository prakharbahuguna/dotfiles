# General oh-my-zsh settings
HYPHEN_INSENSITIVE="true"
ENABLE_CORRECTION="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="yyyy-mm-dd"


# Packages to load
ZGEN_OH_MY_ZSH_PACKAGES=(autopep8 cp colored-man-pages colorize \
    command-not-found extract gitfast gitignore pep8 pip pylint python sudo \
    tmux urltools)
ZGEN_OTHER_PACKAGES=(rimraf/k zsh-users/zsh-syntax-highlighting \
    zsh-users/zsh-history-substring-search)


# Powerlevel9K theme settings
POWERLEVEL9K_SHOW_CHANGESET=true
POWERLEVEL9K_CHANGESET_HASH_LENGTH=10
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(context dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status command_execution_time time)


# Syntax highlighter settings
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets cursor root line)


# History substring search
setopt HIST_FIND_NO_DUPS
# bind UP and DOWN arrow keys
zmodload zsh/terminfo

if [ $TERM_PROGRAM = 'iTerm.app' ]; then
    ZSH_TMUX_AUTOSTART=true
fi
